            <LinearLayout
                android:id="@+id/ll_StartDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:weightSum="5">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/White"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_start_gray_24dp" />


                <TextView
                    android:id="@+id/btnStartDay"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="4"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="Start Day"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:textStyle="normal" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/sw_start_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:theme="@style/SwitchCompatTheme"
                    android:layout_marginRight="0dp"
                    android:layout_gravity="left|center"
                    android:checked="false"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_StopDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@color/white"
                android:visibility="gone"
                android:weightSum="5">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="@color/White"
                    android:src="@drawable/stop_bussiness_icon_3"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/btnStopDay"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="4"

                    android:background="@color/white"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="Stop Day"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

