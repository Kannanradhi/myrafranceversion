<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="11">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            android:id="@+id/SCREEN_HEADER"
            layout="@layout/titlebar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.3"
        android:background="@drawable/border_gray">

        <LinearLayout
            android:id="@+id/wrapper_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="MODEL"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/border_gray"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/txt_model"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_margin="0.5dp"
                                android:layout_weight="9"
                                android:background="#FFFFFF"
                                android:enabled="false"
                                android:hint="Model"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="HP"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_hp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/border_gray"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <EditText
                                android:id="@+id/et_hp"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_margin="0.5dp"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:enabled="false"
                                android:hint="Horse Power"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="BRAND"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_brand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/border_gray"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/txt_brand"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_margin="0.5dp"
                                android:layout_weight="9"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:gravity="left|center_vertical"
                                android:hint="Brand"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="PHASE"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_phase"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/et_phase"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_margin="0.5dp"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:gravity="left|center_vertical"
                                android:hint="Phase"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="TYPE"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/border_gray"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/txt_type"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_margin="0.5dp"
                                android:layout_weight="9"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:gravity="left|center_vertical"
                                android:hint="Type"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="TOTAL HEAD"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_total_head"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/et_total_head"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_margin="0.5dp"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:enabled="false"
                                android:gravity="left|center_vertical"
                                android:hint="Total Head"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="LHP @MAX HEAD"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_lhp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <EditText
                                android:id="@+id/et_lhp"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_margin="0.5dp"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:enabled="true"
                                android:gravity="left|center_vertical"
                                android:hint="LHP @MAX HEAD"
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="SERIAL NUMBER"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_serial_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/txt_serial_num"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_margin="0.5dp"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:enabled="false"
                                android:gravity="left|center_vertical"
                                android:hint="Serial Number"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="LIST PRICE"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_list_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/et_list_price"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_margin="0.5dp"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:gravity="left|center_vertical"
                                android:hint="List Price"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="APPLICATION"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_application"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <EditText
                                android:id="@+id/et_application"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0.5dp"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:gravity="top|left"
                                android:hint="Application"
                                android:inputType="textMultiLine"
                                android:minHeight="20dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:singleLine="false"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimary" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="PIPE SIZE"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_pipe_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <EditText
                                android:id="@+id/et_pipe_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0.5dp"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:gravity="top|left"
                                android:hint="Pipe Size"
                                android:minHeight="20dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:singleLine="false"
                                android:textSize="14sp"
                                android:textColor="@color/colorPrimary" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            android:text="SUB or SURFACE"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_replac_sugg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/txt_replac_sugg"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_margin="0.5dp"
                                android:layout_weight="9"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:gravity="left|center_vertical"
                                android:hint="@string/end_time"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp" />
                        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_gray"
                android:orientation="horizontal"
                android:weightSum="10">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <RadioButton
                        android:id="@+id/rb_sub"
                        android:checked="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="SUB"/>

                    <RadioButton
                        android:id="@+id/rb_surface"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="SURFACE"/>
                </RadioGroup>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="REPLACEMENT SUGGESTION"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_rep_sug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_gray"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txt_rep_sug"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_margin="0.5dp"
                    android:layout_weight="9"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:gravity="left|center_vertical"
                    android:hint="Replacement"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSaveWorkLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight=".7"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Save Work Log"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="20sp" />

</LinearLayout>