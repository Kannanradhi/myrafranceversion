<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_background"
        android:gravity="center"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/maintbl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/White"
            android:gravity="center"
            android:shrinkColumns="1,3,5,7"
            android:stretchColumns="0,2,4,6,8" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent_background"
                android:gravity="center" >
                
                <TextView
                    android:id="@+id/po_tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_background"
                    android:gravity="center"
                    android:padding="1dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/po_tv_partno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_background"
                    android:gravity="center"
                    android:padding="1dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/po_tv_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_background"
                    android:gravity="center"
                    android:padding="1dp"
                    android:textColor="@color/Black"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <Button
                    android:id="@+id/btn_po_action"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_primary_primary"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="View"
                    android:padding="2dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:textSize="15sp" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>