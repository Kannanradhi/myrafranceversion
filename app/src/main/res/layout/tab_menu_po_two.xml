<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_background"
        android:gravity="center"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/maintbl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/transparent_background"
            android:gravity="center"
            android:shrinkColumns="1"
            android:stretchColumns="0,2" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/transparent_background"
                android:gravity="center" >

                <TextView
                    android:id="@+id/et_tabmenu2"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_isteer_color_half"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:hint="Available Credit"
                    android:padding="1dp"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/White"
                    android:textSize="15sp" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_background" />

<!--                 <TextView
                    android:id="@+id/et_tabmenu2"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_isteercolor_half"
                    android:gravity="center"
                    android:hint="Tax %"
                    android:padding="1dp"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/White"
                    android:textSize="15sp" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_background" /> -->

                <TextView
                    android:id="@+id/tv_tabmenu3"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_grey_red_half_b"
                    android:clickable="true"
                    android:backgroundTint="@color/colorPrimary"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Total Value"
                    android:textColor="@color/White"
                    android:textSize="15sp" />
            </TableRow>
             <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/transparent_background"
                android:gravity="center" >

                <TextView
                    android:id="@+id/po_tv_available_credit"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_isteer_white_half"
                    android:gravity="center"
                    android:padding="1dp"
                    android:maxLength="9"
                    android:inputType="numberDecimal"
                    android:hint="0.00"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_background" />

 <!--                <TextView
                    android:id="@+id/listr_tv_tax"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_isteer_white_half"
                    android:gravity="center"
                    android:padding="1dp"
                    android:textColor="@color/Black"
                    android:textColorHint="@color/iSteerColor1"
                    android:textSize="15sp" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent_background" /> -->

                <TextView
                    android:id="@+id/po_tv_total_value"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_white_red_half_t"
                    android:maxLength="9"
                    android:inputType="numberDecimal"
                    android:hint="0.00"
                  	android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="15sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>