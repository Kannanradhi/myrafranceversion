<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#0FFF" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0FFF" >

        <Button
            android:id="@+id/calendar_day_gridcell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/cal_bg"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000" >
        </Button>

        <LinearLayout
            android:id="@+id/calendar_day_gridcell_pending_eventbox"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:background="@drawable/bg_pending_eventbox"
            android:backgroundTint="@color/dark_red"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bg_pending_eventbox_count"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/calendar_day_gridcell_eventbox"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:background="@drawable/bg_completed_eventbox"
            android:backgroundTint="@color/dark_green"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bg_completed_eventbox_count"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="8dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>