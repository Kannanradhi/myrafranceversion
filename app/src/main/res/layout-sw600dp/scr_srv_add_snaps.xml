<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="11" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <include
            android:id="@+id/SCREEN_HEADER"
            layout="@layout/titlebar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10" >

        <LinearLayout
            android:id="@+id/wrapper_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/ll2"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@color/iSteerGreyDark"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_take_snap"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_margin="0.5dp"
                    android:background="@color/White"
                    android:ems="10"
                    android:gravity="left|center_vertical"
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:paddingRight="50dp"
                    android:singleLine="true"
                    android:text="Take Snap"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/red"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/sig_snap_take1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/White"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_tick_green_24dp"
                    android:tint="@color/iSteerGreen"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@color/iSteerGreyDark"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_snap_name"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_margin="0.5dp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:gravity="left|center_vertical"
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:paddingRight="50dp"
                    android:singleLine="true"
                    android:text="Snap Name"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/sig_snap_name"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_close_gray_24dp"
                    android:visibility="visible" />
            </RelativeLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="Upload"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnSaveMOM"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="Taken Snaps"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@color/iSteerGreyDark"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_margin="0.5dp"
                    android:background="@color/White"
                    android:ems="10"
                    android:gravity="left|center_vertical"
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:paddingRight="50dp"
                    android:singleLine="true"
                    android:text="Snap Name 1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/sig_snap_take"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/White"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_tick_green_24dp"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>