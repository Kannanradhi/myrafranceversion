<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_background"
        android:gravity="center"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/maintbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/White"
            android:gravity="center"
            android:shrinkColumns="1,3,5,7,9,11"
            android:stretchColumns="0,2,4,6,8,10" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/transparent_background"
                android:gravity="center" >

                <TextView
                    android:id="@+id/wl_tv_date"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent_background"
                    android:gravity="center"
                    android:padding="1dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/White"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/iSteerTexts" />

                <TextView
                    android:id="@+id/wl_tv_serviced_by"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/iSteerTexts" />

                <TextView
                    android:id="@+id/wl_tv_type"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/iSteerTexts" />

                <TextView
                    android:id="@+id/wl_tv_status"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent_background"
                    android:gravity="center"
                    android:padding="1dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/White"
                    android:textSize="15sp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/ll_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_background"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/wl_tv_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent_background"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/White"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent_background"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/wl_btn_mom"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_primary_primary"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="MOM"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/wl_btn_attachments"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_primary_primary"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="Attachments"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>